---
const { images = [] } = Astro.props;
---

<style>
  .gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
    padding: 1rem;
  }

  .card {
    border-radius: 12px;
    overflow: hidden;
    position: relative;
    transition: transform 0.2s ease-in-out;
    background: #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .card:hover {
    transform: translateY(-4px);
  }

  .image {
    width: 100%;
    height: 220px;
    object-fit: cover;
  }

  .info {
    padding: 0.75rem;
    font-size: 0.9rem;
    color: #333;
  }

  .info strong {
    display: block;
    font-weight: 600;
  }

  .likes {
    position: absolute;
    top: 10px;
    right: 10px;
    background: rgba(255,255,255,0.85);
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .likes svg {
    width: 14px;
    height: 14px;
    fill: #e63946;
  }
</style>

<div class="gallery">
  {images.map(img => (
    <div class="card">
      <img src={img.url} alt={img.alt_description} class="image" loading="lazy" />
      <div class="likes">
        <svg viewBox="0 0 24 24"><path d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 
        5.42 4.42 3 7.5 3c1.74 0 3.41 0.81 4.5 2.09C13.09 
        3.81 14.76 3 16.5 3 19.58 3 22 
        5.42 22 8.5c0 3.78-3.4 
        6.86-8.55 11.54L12 21.35z"/></svg>
        <span>{img.likes}</span>
      </div>
      <div class="info">
        <strong>{img.user?.name}</strong>
        <span>{img.alt_description}</span>
      </div>
    </div>
  ))}
</div>
