import Gallery from "../components/Gallery.astro";

// ‚öôÔ∏è URL del backend ‚Äî forzar IPv4 para evitar que `localhost` resuelva a ::1 y cause ECONNREFUSED
const API_URL = "http://localhost:4000/api/unsplash/imagenes"; // docker-compose usar√° "backend" como host

let images = [];

try {
  const res = await fetch(API_URL);

  console.log("Fetch response status:", res);

  if (res.ok) {
    images = await res.json();
  }
} catch (error) {
  console.error("Error fetching images:", error);
}
